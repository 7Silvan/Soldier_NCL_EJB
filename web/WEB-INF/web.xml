        <res-ref-name>jdbc/soldier</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
        <res-sharing-scope>Shareable</res-sharing-scope>
    </resource-ref>    -->

    <listener>
        <listener-class>ncl.military.controller.Log4jInit</listener-class>
    </listener>

    <context-param>
        <param-name>jndiPath</param-name>
        <param-value>java:/jdbc/soldier</param-value>
    </context-param>
    <context-param>
        <param-name>debugMode</param-name>
        <param-value>false</param-value>
    </context-param>
    <context-param>
        <param-name>daoModule</param-name>
        <param-value>ncl.military.dao.modules.OracleModule</param-value>
    </context-param>

    <jsp-config>
        <jsp-property-group>
            <description>JSP config for pages</description>
            <url-pattern>*.jsp</url-pattern>
            <include-prelude>/jspf/header.jspf</include-prelude>
            <include-coda>/jspf/footer.jspf</include-coda>
        </jsp-property-group>
    </jsp-config>

    <!-- list of all actions -->
    <!-- common actions -->
    <context-param>
        <param-name>action_GET_ALL</param-name>
        <param-value>getAll</param-value>
    </context-param>
    <context-param>
        <param-name>action_GET_TOP</param-name>
        <param-value>getTop</param-value>
    </context-param>
    <context-param>
        <param-name>action_EDIT_SOLDIER</param-name>
        <param-value>editSoldier</param-value>
    </context-param>
    <context-param>
        <param-name>action_EDIT_UNIT</param-name>
        <param-value>editUnit</param-value>
    </context-param>
    <context-param>
        <param-name>action_EDIT_LOCATION</param-name>
        <param-value>editLocation</param-value>
    </context-param>
    <context-param>
        <param-name>action_GET_SEARCH_RESULTS</param-name>
        <param-value>getSearchResults</param-value>
    </context-param>
    <!-- list of soldier actions -->
    <context-param>
        <param-name>action_GET_SUBS_OF_SOLDIER</param-name>
        <param-value>getSubsOfSoldier</param-value>
    </context-param>
    <context-param>
        <param-name>action_ADD_SOLDIER</param-name>
        <param-value>addSoldier</param-value>
    </context-param>
    <context-param>
        <param-name>action_DELETE_SOLDIER</param-name>
        <param-value>deleteSoldier</param-value>
    </context-param>
    <context-param>
        <param-name>action_MOVE_SOLDIER</param-name>
        <param-value>moveSoldier</param-value>
    </context-param>
    <context-param>
        <param-name>action_MOVE_UNDER_THIS_SOLDIER</param-name>
        <param-value>moveUnderThisSoldier</param-value>
    </context-param>
    <!-- action for units -->
    <context-param>
        <param-name>action_GET_SOLDIERS_OF_UNIT</param-name>
        <param-value>getSoldiersOfUnit</param-value>
    </context-param>
    <!-- action for locations -->
    <context-param>
        <param-name>action_GET_UNITS_OF_LOCATIONS</param-name>
        <param-value>getUnitsOfLocations</param-value>
    </context-param>
</web-app>
