<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
		  http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
         version="2.5">

    <display-name>soldier</display-name>

    <welcome-file-list>
        <welcome-file>/index.jsp</welcome-file>
    </welcome-file-list>

    <servlet>
        <servlet-name>ControllerServlet</servlet-name>
        <!-- list of classes accessing by pair of class and action, if has (up.)* - decorating class for (up.)*-1 -->
        <servlet-class>ncl.military.controller.ControllerServlet</servlet-class>
        <init-param>
            <param-name>/viewSoldiers:getTop</param-name>
            <param-value>ncl.military.controller.handle.executors.TopOfSoldiersGetter</param-value>
        </init-param>
        <init-param>
            <param-name>/viewSoldiers:getSubsOfSoldier</param-name>
            <param-value>ncl.military.controller.handle.executors.SubsOfSoldierGetter</param-value>
        </init-param>
        <init-param>
            <param-name>/viewSoldiers:getSearchResults</param-name>
            <param-value>ncl.military.controller.handle.executors.SoldierSearcher</param-value>
        </init-param>
        <init-param>
            <param-name>/viewSoldiers:getSoldiersOfUnit</param-name>
            <param-value>ncl.military.controller.handle.executors.AllSoldiersOfUnitGetter</param-value>
        </init-param>
        <init-param>
            <param-name>/viewSoldiers:addSoldier</param-name>
            <param-value>ncl.military.controller.handle.executors.SoldierAdder</param-value>
        </init-param>
        <init-param>
            <param-name>/viewSoldiers:moveSoldier</param-name>
            <param-value>ncl.military.controller.handle.executors.SoldierMover</param-value>
        </init-param>
        <init-param>
            <param-name>/viewSoldiers:moveUnderThisSoldier</param-name>
            <param-value>ncl.military.controller.handle.executors.SoldierChanger</param-value>
        </init-param>
        <init-param>
            <param-name>up./viewSoldiers:moveUnderThisSoldier</param-name>
            <param-value>ncl.military.controller.handle.executors.SoldierOnMoveChanger</param-value>
        </init-param>
        <init-param>
            <param-name>/viewSoldiers:editSoldier</param-name>
            <param-value>ncl.military.controller.handle.executors.SoldierChanger</param-value>
        </init-param>
        <init-param>
            <param-name>/viewSoldiers:deleteSoldier</param-name>
            <param-value>ncl.military.controller.handle.executors.SoldierDeletter</param-value>
        </init-param>
        <init-param>
            <param-name>/viewUnits:getAll</param-name>
            <param-value>ncl.military.controller.handle.executors.AllUnitsGetter</param-value>
        </init-param>
        <init-param>
            <param-name>/viewUnits:getUnitsOfLocations</param-name>
            <param-value>ncl.military.controller.handle.executors.AllUnitsOfLocationGetter</param-value>
        </init-param>
        <init-param>
            <param-name>/viewUnits:editUnit</param-name>
            <param-value>ncl.military.controller.handle.executors.UnitChanger</param-value>
        </init-param>
        <init-param>
            <param-name>/viewLocations:getAll</param-name>
            <param-value>ncl.military.controller.handle.executors.AllLocationsGetter</param-value>
        </init-param>
        <init-param>
            <param-name>/viewLocations:editLocation</param-name>
            <param-value>ncl.military.controller.handle.executors.LocationChanger</param-value>
        </init-param>
        <init-param>
            <param-name>/viewLocations</param-name>
            <param-value>/viewLocations.jsp</param-value>
        </init-param>
        <init-param>
            <param-name>/viewUnits</param-name>
            <param-value>/viewUnits.jsp</param-value>
        </init-param>
        <init-param>
            <param-name>/viewSoldiers</param-name>
            <param-value>/viewSoldiers.jsp</param-value>
        </init-param>
        <!-- list of jsp-views for every action -->
        <init-param>
            <param-name>:editSoldier</param-name>
            <param-value>/editorSoldier.jsp</param-value>
        </init-param>
        <init-param>
            <param-name>:editUnit</param-name>
            <param-value>/editorUnit.jsp</param-value>
        </init-param>
        <init-param>
            <param-name>:editLocation</param-name>
            <param-value>/editorLocation.jsp</param-value>
        </init-param>
        <init-param>
            <param-name>:addSoldier</param-name>
            <param-value>/editorSoldier.jsp</param-value>
        </init-param>
        <init-param>
            <param-name>:getSubsOfSoldier</param-name>
            <param-value>/viewSoldiers.jsp</param-value>
        </init-param>
        <init-param>
            <param-name>:getTop</param-name>
            <param-value>/viewSoldiers.jsp</param-value>
        </init-param>
        <init-param>
            <param-name>:getSearchResults</param-name>
            <param-value>/viewSoldiers.jsp</param-value>
        </init-param>
        <init-param>
            <param-name>:moveUnderThisSoldier</param-name>
            <param-value>/editorSoldier.jsp</param-value>
        </init-param>
        <init-param>
            <param-name>:deleteSoldier</param-name>
            <param-value>/viewSoldiers.jsp</param-value>
        </init-param>
        <init-param>
            <param-name>:getSoldiersOfUnit</param-name>
            <param-value>/viewSoldiers.jsp</param-value>
        </init-param>
        <init-param>
            <param-name>:getUnitsOfLocations</param-name>
            <param-value>/viewUnits.jsp</param-value>
        </init-param>
        <!-- list of actions by default of path -->
        <init-param>
            <param-name>/viewLocations:</param-name>
            <param-value>getAll</param-value>
        </init-param>
        <init-param>
            <param-name>/viewUnits:</param-name>
            <param-value>getAll</param-value>
        </init-param>
        <init-param>
            <param-name>/viewSoldiers:</param-name>
            <param-value>getTop</param-value>
        </init-param>
        <!-- list of special views -->
        <init-param>
            <param-name>view=error</param-name>
            <param-value>/error.jsp</param-value>
        </init-param>

    </servlet>
    <servlet-mapping>
        <servlet-name>ControllerServlet</servlet-name>
        <url-pattern>/viewSoldiers</url-pattern>
        <url-pattern>/viewUnits</url-pattern>
        <url-pattern>/viewLocations</url-pattern>
        <url-pattern>/view</url-pattern>
    </servlet-mapping>
